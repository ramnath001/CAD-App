{
	"base": null,
	"apis_files": ["/conf/apis/jenkins"],

	"rules": {
		"get_jobs": {
			"declare": {
				"@auth": "#/auth",
				"@job_name": "#/job_name"
			},
			"version": "v1.1",
			"execute": [
				{
					"api": "job",
					"path": {
						"job": "@job_name"
					},
					"header": {
						"Authorization": "Basic @auth"
					}
				}
			]
		},
		
		"get_successfulbuilds": {
			"declare": {
				"@auth": "#/auth",
				"@job_name": "#/job_name"
				
			},
			"version": "v1.12",
			"execute": [
				{
					"api": "jobs",
					"path": {
						"job": "@job_name"
						
					},
					"header": {
						"Authorization": "Basic @auth"
					}
				}
			]
		}
	}
}