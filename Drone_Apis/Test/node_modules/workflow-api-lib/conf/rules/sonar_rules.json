{
	"base": null,
	"apis_files": ["/conf/apis/sonar"],

	"rules": {
		"get_metrics": {
			
			"version": "v1.12",
			"execute": [
				{
					"api": "metrics"
					
				}
			]
		},
		
		"get_profiles": {
			
			"version": "v1.1",
			"execute": [
				{
					"api": "profile"
					
				}
			]
		},

		"get_repos": {
			
			"version": "v1.13",
			"execute": [
				{
					"api": "repos"
					
				}
			]
		},

		"get_combined":{

			"version": "v1.12",
			"execute" : [
              {
              	"api":"metrics",
              	"success":{

              		"declare": {
										"@containerId1": "#/Id1"
									},
              		"execute": [
              		{
              			"version":"v1.1",
                       "api":"profile",
                       "path":{

                       	  "@containerId2": "#/containerId1"
                       },
                       "success":{

                       		"declare":{

                       				"@containerId3":"#/containerId2"
                       		},
                       		"execute":[

                       		{
                       			"version":"v1.13",
                       			"api":"repos",
                       			"path":{

                       	  				"@containerId4": "#/containerId3"
                      				 }

                       		}

                       		]

                       }

              		}
              		
              		


              	]
              }
            }
		  ]
		}
	}
}